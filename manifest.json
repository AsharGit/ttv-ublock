{
	"name": "TTV ad-block",
	"version": "1.1.1",
	"description": "Block ads on that certain streaming website",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"*://*.twitch.tv/*",
		"*://*.ttvnw.net/*",
		"storage",
		"webRequest",
		"webRequestBlocking"
	]
}
